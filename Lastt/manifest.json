{
  "manifest_version": 3,
  "name": "Auto Disable Items ",
  "version": "2.0",
  "description": "Automatically disable specific items on a webpage.",
  "permissions": [
    "scripting",
    "activeTab"
  ],
  "action": {
    "default_title": "Auto Disable",
    "default_popup": "popup.html",
    "default_icons": {
      "16": "icon16.png",
      "32": "icon32.png",
      "48": "icon48.png",
      "128": "icon128.png"
    }
  },
  "content_scripts": [
    {
      "matches": [
        "https://*/*",
        "http://*/*"
      ],
      "js": [
        "content.js"
      ],
      "author": "Mohamed Shalaby"
    }
  ],
  "icons": {
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png"
  }
}